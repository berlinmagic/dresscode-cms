<% if @rasters %>
	<% for raster in @rasters %>
		<%= link_to raster.name, dc_raster_path(raster) %>
	<% end %>
<% else %>
	<% Raster.all.each do |r| %>
		<%= link_to r.name, dc_raster_path(r), 
		 	:class => "#{'aktiv' if @raster && @raster == r}"%>
	<% end %>
<% end %>
