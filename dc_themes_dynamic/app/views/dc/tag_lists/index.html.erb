<% title "Tag Lists" %>

<table class="system_table">
  <tr>
    <th>Name</th>
    <th>Tag</th>
    <th>Description</th>
    <th>Tag Type</th>
    <th>System Stuff</th>
	<th class="actions"> </th>
  </tr>
  <% for tag_list in @tag_lists %>
    <tr class="<%= cycle('even', 'odd') %>" id="<%= dom_id(tag_list)%>">
      <td><%= tag_list.name %></td>
      <td><%= tag_list.tag %></td>
      <td><%= tag_list.description %></td>
      <td><%= tag_list.tag_type %></td>
      <td><%= tag_list.system_stuff %></td>
      <td class="actions"><%= raw the_actions( tag_list ) %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Tag List", new_dc_tag_list_path, :class => 'LightBox', :title => 'Neuen Tag anlegen' %></p>
