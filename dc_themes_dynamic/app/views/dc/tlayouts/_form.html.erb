<div class="LB_Box">
	<%= form_for([:dc, @tlayout]) do |f| %>
	<%= f.error_messages %>
		<div class="field">
			<div class="fl_box_110">
				<%= f.label :name %>
			</div>
			<div class="fl_box_350">
				<%= f.text_field :name %>
			</div>
			<div class="clearfix"></div>
		</div>
	
		<div class="field">
			<div class="fl_box_110">
				<%= f.label :description %>
			</div>
			<div class="fl_box_350">
				<%= f.text_area :description, :rows => 7 %>
			</div>
			<div class="clearfix"></div>
		</div>
		<div class="field">
			<div class="fl_box_110">
				<%= f.label :raster %>
			</div>
			<div class="fl_box_350">
				<%= f.select :raster_id, options_for_select( Raster.all.map { |c| [c.name, c.id] })  %>
			</div>
			<div class="clearfix"></div>
		</div>
		<br/>
		<div class="actions">
			<div class="fl_box_110">
				&nbsp;
			</div>
			<div class="fl_box_150">
				<%= f.submit %>
			</div>
			<div class="clearfix"></div>
		</div>
	<% end %>
</div>