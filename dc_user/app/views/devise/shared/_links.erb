<div class="clearfix"></div>
<a href="#" id="login_help"><%= t('dc.users.links.help_links') %></a>
<div id="login_help_links">
	<%- if controller_name != 'sessions' %>
	  <%= link_to t("dc.users.links.sign_in"), new_session_path(resource_name) %><br />
	<% end -%>

	<% unless DC::Config[:invite_only_site] %>
	<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
	  <%= link_to t("dc.users.links.sign_up"), new_registration_path(resource_name) %><br />
	<% end -%>
	<% end -%>

	<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
	  <%= link_to t("dc.users.links.forgot_your_password"), new_password_path(resource_name) %><br />
	<% end -%>

	<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
	  <%= link_to t("dc.users.links.didn_t_receive_confirmation_instructions"), new_confirmation_path(resource_name) %><br />
	<% end -%>

	<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
	  <%= link_to t("dc.users.links.didn_t_receive_unlock_instructions"), new_unlock_path(resource_name) %><br />
	<% end -%>
</div>