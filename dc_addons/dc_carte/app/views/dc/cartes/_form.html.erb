<div class="dc_preference_line">
	<div class="fl_box_210">
		<%= f.label :name, t("dc.cartes.form.name") %>
	</div>
	<div class="fl_box_210">
		<%= f.text_field :name %>
	</div>
	<div class="clearfix"></div>
</div>

<div class="dc_preference_line">
	<div class="fl_box_210">
		<%= f.label :carte_type, t("dc.cartes.form.carte_type") %>
	</div>
	<div class="fl_box_210">
		<%= f.select :carte_type, options_for_select( Carte::CARTE_TYPES.map { |c| [t("dc.cartes.form.carte_types.#{ c }"),c] } ) %>
	</div>
	<div class="clearfix"></div>
</div>

<div class="dc_preference_line">
	<div class="fl_box_210">
		<%= f.label :description, t("dc.cartes.form.description") %>
	</div>
	<div class="fl_box_210">
		<%= f.text_area :description, :rows => 3 %>
	</div>
	<div class="clearfix"></div>
</div>

<div class="dc_preference_line">
	<div class="fl_box_210">
		<%= f.label :aktiv, t("dc.cartes.form.aktiv") %>
	</div>
	<div class="fl_box_210">
		<%= f.check_box :aktiv %>
	</div>
	<div class="clearfix"></div>
</div>

<div class="dc_preference_line">
	
</div>
		