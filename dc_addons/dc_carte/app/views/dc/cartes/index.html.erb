<% content_for :dc_head do %>
	<div class="fl_box_470">
		<h1><%= dc_admin_head_icon( 47 ) %> speisekarten</h1>
	</div>
	<div class="fl_box_470">
	</div>
<% end %>


<div class="dc_box">
	<div class="dc_table_head">
		
		<div class="grid_1">
			&nbsp;
		</div>
		
		<div class="fl_box_110">
			Name
		</div>
		<div class="fl_box_230">
			&nbsp;
		</div>
		<div class="fl_box_110">
			&nbsp;
		</div>
		<div class="grid_2">
			&nbsp;
		</div>
		<div class="fl_box_210">
			&nbsp;
		</div>
		
		<div class="clearfix"></div>
	</div>
	
	<% @cartes.each do |carte| %>
		<div class="dc_table_row" id="<%= dom_id(carte)%>">
			<div class="row_head">
				
				<div class="grid_1">
					&nbsp;
				</div>
				
				<div class="fl_box_110">
					<%= carte.name %>
				</div>
				<div class="fl_box_230">
					&nbsp;
				</div>
				<div class="fl_box_110">
					&nbsp;
				</div>
				<div class="grid_2">
					&nbsp;
				</div>
				<div class="fl_box_210">
					&nbsp;
				</div>
				
				<div class="fl_box_110 rfloat rtext">
					<% if admin_check %>
						<%= link_to dc_icon( :icon => 29 ), [:dcr, carte], :title => 'Karte anzeigen' %>
						&nbsp;
						<%= link_to dc_icon( :icon => 20 ), [:dc, carte], :confirm => 'Karte wirklich endgültig löschen?', :method => :delete %>
					<% else %>
						&nbsp;
					<% end %>
				</div>
				
				<div class="clearfix"></div>
			</div>
			
			<div class="clearfix"></div>
		</div>
	<% end %>
</div>

<%= render "dc/cartes/sidebar" %>
