<% content_for :dc_head do %>
	<div class="fl_box_470">
		<h1><%= dc_admin_head_icon( 47 ) %> speisekarten</h1>
	</div>
	<div class="fl_box_470">
	</div>
<% end %>


<div class="dc_box">
	
	<div class="dc_wbox head">
		<h2>Einträge: Speisen / Getränke</h2>
		<div class="clearfix"></div>
	</div>
	
	<div class="dc_table_head">
		
		<div class="grid_1">
			&nbsp;
		</div>
		
		<div class="fl_box_230">
			Name
		</div>
		<div class="fl_box_230">
			&nbsp;
		</div>
		<div class="grid_2">
			&nbsp;
		</div>
		<div class="fl_box_210">
			&nbsp;
		</div>
		
		<div class="clearfix"></div>
	</div>
	
	<% @carte_entries.each do |entry| %>
		<div class="dc_table_row" id="<%= dom_id(entry)%>">
			<div class="row_head">
				
				<div class="grid_1">
					&nbsp;
				</div>
				
				<div class="fl_box_230">
					<%= entry.headline %>
				</div>
				<div class="fl_box_210">
					<%= t("dc.carte_entries.form.entry_types.#{ entry.entry_type }") %>
				</div>
				<div class="grid_2">
					&nbsp;
				</div>
				<div class="fl_box_110 rtext">
					<%= number_to_currency( entry.master_price ) %>
				</div>
				<div class="fl_box_110">
					&nbsp;
				</div>
				<div class="fl_box_110 rfloat rtext">
					<% if admin_check %>
						<%= link_to dc_icon( :icon => 29 ), [:dcr, entry], :title => 'entry anzeigen' %>
						&nbsp;
						<%= link_to dc_icon( :icon => 20 ), [:dc, entry], :confirm => 'entry wirklich endgültig löschen?', :method => :delete %>
					<% else %>
						&nbsp;
					<% end %>
				</div>
				
				<div class="clearfix"></div>
			</div>
			
			<div class="clearfix"></div>
		</div>
	<% end %>
</div>

<%= render "dc/cartes/sidebar" %>
