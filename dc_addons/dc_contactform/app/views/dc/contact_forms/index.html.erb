<% content_for :dc_head do %>
	
	<div class="fl_box_470">
		<h1><%= dc_admin_head_icon( 42 ) %> posteingang</h1>
	</div>
	
	<div class="fl_box_470">
		
	</div>
	
<% end %>


<div class="dc_box">
	<div class="dc_table_head">
		
		<div class="grid_1">
			&nbsp;
		</div>
		
		<div class="fl_box_110">
			Datum
		</div>
		<div class="fl_box_230">
			Von
		</div>
		<div class="fl_box_110">
			Typ
		</div>
		<div class="grid_2">
			&nbsp;
		</div>
		<div class="fl_box_210">
			Betreff
		</div>
		
		<div class="clearfix"></div>
	</div>
	
	<% @contact_forms.each do |form| %>
		<div class="dc_table_row" id="<%= dom_id(form)%>">
			<div class="row_head">
				
				<div class="grid_1">
					&nbsp;
				</div>
				
				<div class="fl_box_110">
					<%= form.created_at.strftime('%d.%m.%Y') %>
				</div>
				<div class="fl_box_230">
					<%= form.email %>
				</div>
				<div class="fl_box_110">
					Kontakt
				</div>
				<div class="grid_2">
					<%= form.unread ? raw("<div class='active_dot'></div>") : raw("<div class='inactive_dot'></div>") %>
				</div>
				<div class="fl_box_210">
					<%= form.mail_subject %>
				</div>
				
				<div class="fl_box_110 rfloat rtext">
					<% if admin_check %>
						<%= link_to dc_icon( :icon => 29 ), [:dcr, form], :title => 'E-Mail anzeigen' %>
						&nbsp;
						<%= link_to dc_icon( :icon => 20 ), [:dc, form], :confirm => 'Mail wirklich endgültig löschen?', :method => :delete %>
					<% else %>
						&nbsp;
					<% end %>
				</div>
				
				<div class="clearfix"></div>
			</div>
			
			<div class="clearfix"></div>
		</div>
	<% end %>
</div>



<% content_for :sidebar do %>

	<%= dc_aside_box( 'E-Mails', "aktiv" ) do %>
		 
	<% end %>

<% end %>