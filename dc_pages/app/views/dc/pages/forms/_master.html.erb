<%= form_for([:dc, @page]) do |f| %>
	<%= f.error_messages %>
	<br/>
	
	Seiten-Art:<br/>
	<%= f.select :page_type, options_for_select( Page::PAGE_TYPES.map {|c| [c,c]}, @page.page_type )%><br/>
	<br/>
	
	System-Page?:<br/>
	<%= f.check_box :system_page %><br/>
	<br/>
	
	
	System-Name:<br/>
	<%= f.text_field :system_name %><br/>
	<br/>
	
	Seiten-Slug:<br/>
	<%= f.text_field :slug %><br/>
	<br/>
	
	
	<br/>
	<%= f.submit ' update! ' %>
	<br/>
	<br/>
<% end %>

