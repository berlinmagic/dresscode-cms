		<div class="clearfix"></div>
	</noscript>
	
	<%= render 'static/parts/header' %>
	
	<div class="clearfix"></div>
	
	<div class="container_48">
		<div id="the_headline">
			<% if @page && @page.the_headline %>
				<h1><%= @page.the_headline %></h1>
			<% end %>
		</div>
	</div>
	
	<div class="clearfix"></div>
	
	<div id="dc_page">
		<div class="container_48">
			<div class="fl_box_950">
