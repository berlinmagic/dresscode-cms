	color: red;
}
#system_sidebar #system_side_nav a.sub_nav { margin: 0 10px 5px;}


/* F O O T E R */
#system_footer { margin:0; padding:0; <%= vertical_gradient( '#111111', '#333333' ) %> display:block; }
