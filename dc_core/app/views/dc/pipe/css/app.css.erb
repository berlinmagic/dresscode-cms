html, body, body > * { margin:0; padding:0; border:0; vertical-align: top; }

table {text-align: left;}
th, td { padding: 5px 10px 5px 0;}

.clearfix:before,.clearfix:after{content:'';display:table}.clearfix:after{clear:both}.clearfix{zoom:1}

#system_content { display:block; float: left; overflow-x: hidden; overflow-y: scroll; }

#system_content #main_content { padding: 10px; position:relative; }




/* S I D E B A R */
#system_sidebar { background: #ccc; display:block; float: left;}
