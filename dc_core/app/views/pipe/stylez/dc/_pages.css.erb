.sortable_page { padding: 5px 0; <%= vertical_gradient( '#ffffff', '#d8d8d8') %> <%= all_border_radius('5px') %> margin: 0 0 10px; 
		border: solid 1px #fff; <%= box_shadow('2px 2px 2px 0px rgba(0,0,0,.5)') %> color: #444; <%= text_shadow('1px 1px 0px #fff, 1px 1px 0px #fff') %> }



.sortable_page .icon_field { text-align: center; }

.sortable_page .right_actions { float: right; background: transparent; }


.sortable_page.level1 { margin-left: 20px; }
.sortable_page.level2 { margin-left: 40px; }
.sortable_page.level3 { margin-left: 60px; }
.sortable_page.level4 { margin-left: 80px; }
.sortable_page.level5 { margin-left: 100px; }

