/********	Flash - Messages 	*****************************************************/
div.flash { 
	position:fixed; z-index:999;
	border: 0; 
	padding: 1% 1%;
	width:70%;
	font-weight:normal;
	<%= all_border_radius( '10px' ) %>
	color: #444; 
	background: rgba(0,0,0,.5); 
	top: 10%;
	left:14%;
	
}
