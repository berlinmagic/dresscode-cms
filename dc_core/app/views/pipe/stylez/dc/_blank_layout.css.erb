#blank_content { <%= vertical_gradient( '#111111', '#333333' ) %> }

#login_box { position: absolute; top: 50%; left: 50%; margin: -180px 0 0 -200px; min-height: 200px; width: 340px;
	border: solid 1px #000; padding: 10px 30px 20px;
	background: #333; <%= box_shadow('1px 1px 1px 0 #666') %> 
	<%= vertical_gradient( '#333333', '#222222' ) %>
	<%= all_border_radius( '15px' ) %> }

#login_box h1 { font-size: 24px; font-weight: bold; line-height: 30px; color: #006699; <%= text_shadow('1px 1px 1px #000') %> }
	
#login_box table.login { margin: 20px 0 0; color: #666; <%= text_shadow('1px 1px 1px #000') %> }

#login_box table.login th { padding: 5px 10px 5px 0px; }
#login_box table.login td { padding: 5px 0px 5px 10px; }


#login_box table.login input[type="password"], #login_box table.login input[type="text"] {
	padding: 5px 15px; <%= all_border_radius( '15px' ) %> border: solid 1px #000;
	<%= text_shadow('1px 1px 1px #000') %>
	<%= box_shadow('1px 1px 1px 0 #666') %> background: #222; color: #777;
	width: auto;
}


#mehr_user_sets { text-decoration: none; color: #555;}
#login_help { text-decoration: none; color: #555;}
#login_help_links { display: none; }