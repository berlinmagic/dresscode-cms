#login_box { position: relative; margin: 10% auto 50px; min-height: 200px; width: 360px;
	border: solid 1px #000; padding: 10px 30px 20px;
	background: rgba(0,0,0,.50); 
	color: #fff;
	<%= box_shadow('1px 1px 1px 0 #666') %> 
	<%= text_shadow('1px 1px 1px #000') %>
	<%= all_border_radius( '15px' ) %> }

#login_box h1 { font-size: 24px; font-weight: bold; line-height: 30px; color: #006699; <%= text_shadow('1px 1px 1px #000') %> }
#login_box h2 { font-size: 20px; font-weight: bold; line-height: 30px; color: #006699; <%= text_shadow('1px 1px 1px #000') %> }



#login_box .lb_field.login input[type="password"], #login_box .lb_field.login input[type="text"] {
	padding: 10px 20px 10px 40px; <%= all_border_radius( '3px' ) %> border: none;
	background: rgba(255,255,255,.70); color: #333;
	width: auto;
}

#login_box .lb_field.login input[type="text"] { background: rgba(255,255,255,.70) url('/images/icons/login_mail.png') no-repeat 7px 10px; }
#login_box .lb_field.login input[type="password"] { background: rgba(255,255,255,.70) url('/images/icons/login_pw.png') no-repeat 7px 10px; }

#mehr_user_sets { text-decoration: none; color: #555;}
#login_help { text-decoration: none; color: #555;}
#login_help_links { display: none; }

#login_box .lb_field.login { padding: 2px 3px 10px; }

.lb_field.action a { color: #666; }