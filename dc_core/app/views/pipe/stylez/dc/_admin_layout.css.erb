#dc_system_content { padding: 5px 5%; }


#system_content { display:block; float: left; overflow-x: hidden; overflow-y: scroll; }

#system_content #main_content { margin: 0; padding: 0; position:relative; }


#system_content #main_content .dc_admin_head { margin: 0; padding: 10px 0; background: #000; <%= box_shadow('0 3px 5px 1px #fff') %> color: #fff;} 

#system_content #main_content .dc_admin_head h1 { 
	margin: 0; padding:0; line-height: 32px; font-size: 24px; font-family: 'Righteous', cursive; font-weight: normal; }

.dc_admin_content { padding: 30px 0;}

.dc_admin_content .dc_box {padding: 10px; background: rgba(0,0,0,.5); <%= all_border_radius( '10px' ) %> }

.dc_admin_content .dc_box .dc_wbox { <%= vertical_gradient( '#cccccc', '#e6e6e6' ) %> display: block; }

.dc_admin_content .dc_box .dc_wbox.head { background: #cccccc; display: block; border-bottom: solid 1px #aaa;}

.dc_admin_content .dc_box .dc_wbox.head h2 { margin: 0; padding: 10px; }

.dc_admin_content .dc_box .dc_wbox.form { padding: 20px 50px; }

.dc_admin_content .dc_box .dc_wbox.buttons { padding: 10px 50px 10px; }



.dc_preference_line { padding: 5px 0 10px; line-height: 30px; font-size: 15px; }

.dc_preference_line input[type="text"] {
	padding: 4px 10px; <%= all_border_radius( '3px' ) %> border: none;
	background: rgba(255,255,255,.70); color: #444;
	border: inset 1px #ccc;
	width: 300px; line-height: 20px; font-size: 15px; font-weight: bold;
}
.dc_preference_line select { width: 320px !important; padding: 0 25px; line-height: 28px; height: 28px; 
		<%= vertical_gradient( '#fff', '#ddd' ) %> font-weight: bold; color: #666; }


.dc_table_head { background: #000; line-height: 22px; color: #fff; padding: 3px 0 1px;}

.dc_table_row { margin: 5px 0 0; }

.dc_table_row .row_head { <%= vertical_gradient( '#cccccc', '#e6e6e6' ) %>  line-height: 20px; color: #333; padding: 3px 0;}

.inactive_dot { width: 8px; height: 8px; <%= all_border_radius( '4px' ) %> border: inset 1px #ccc; background: rgba(153,153,153,.70); margin: 5px 0 0; }
.active_dot { width: 8px; height: 8px; <%= all_border_radius( '4px' ) %> border: inset 1px #ccc; background: #a0c924; margin: 5px 0 0; }





/* #system_content #main_content.dc { background: url('/images/dc_bgs/iceberg.jpg') no-repeat fixed center center; padding: 5px 0 20px; } */

#system_content.dc { background: url('/images/dc_bgs/<%= DC::Config[:dc_background] %>.jpg') no-repeat fixed center center; 
		-webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;}

/* S I D E B A R */
#system_sidebar { display:block; float: left; <%= vertical_gradient( '#cccccc', '#e6e6e6' ) %> overflow-x: hidden; overflow-y: auto;}
#system_sidebar #system_side_nav { padding: 0;}
#system_sidebar #system_side_nav a { 
	padding: 5px 20px; border-top: solid 1px #fff; border-bottom: solid 1px #777; display: block; margin: 0; 
	text-decoration: none; font-weight: normal; <%= vertical_gradient( '#cccccc', '#e6e6e6' ) %> color: #333;
	<%= text_shadow('1px 1px 1px #fff') %>
	}
#system_sidebar #system_side_nav a.aktiv{
	color: red; <%= vertical_gradient( '#e6e6e6', '#a4a4a4' ) %> <%= text_shadow('1px 1px 1px #fff') %>
}
#system_sidebar #system_side_nav a:hover {
	<%= vertical_gradient( '#a4a4a4', '#e6e6e6' ) %>
}

#system_sidebar #system_side_nav a.sub_nav { padding: 5px 20px;}



.dc_aside_box .aside_head {
	padding: 10px 20px; border-top: solid 1px #fff; border-bottom: solid 1px #777; display: block; margin: 0; 
	text-decoration: none; font-weight: bold; <%= vertical_gradient( '#5c8ccd', '#e6e6e6' ) %> color: #666;
	<%= text_shadow('1px 1px 1px #fff') %> cursor: pointer;
}

.dc_aside_box.aktiv .aside_head { 
	<%= vertical_gradient( '#5c8ccd', '#e6e6e6' ) %> color: #000; <%= text_shadow('1px 1px 1px #ccc') %>
}


.dc_aside_box .dc_aside_sub_box .subside_head {
	padding: 5px 20px; border-top: solid 1px #fff; border-bottom: solid 1px #777; display: block; margin: 0; 
	text-decoration: none; font-weight: bold; <%= vertical_gradient( '#aaaaaa', '#e6e6e6' ) %> color: #666;
	<%= text_shadow('1px 1px 1px #fff') %> cursor: pointer;
}

.dc_aside_box .dc_aside_sub_box .subside_body form { margin: 10px 20px 10px; }
.dc_aside_box .dc_aside_sub_box .subside_body table { margin: 5px 10px 5px; }


/* F O O T E R */
#system_footer { margin:0; padding:0; <%= vertical_gradient( '#111111', '#333333' ) %> display:block; }
#system_footer #system_foot_nav { margin:0; padding: 0 0 0 100px; color: #fff;}
#system_footer #system_foot_nav div.foot_box { display: inline-block; padding: 6px 5px 0; position:relative;}
/*
#system_footer #system_foot_nav a.foot_box, #system_footer #system_foot_nav .foot_box a.in_foot_box
{ 	
	-khtml-border-radius: 	 3px;		-webkit-border-radius: 	 3px;
	-moz-border-radius: 	 3px;		-o-border-radius: 		 3px;
	-ms-border-radius: 		 3px;		border-radius: 			 3px; 
	background: #111; display: inline-block; padding: 1px 15px; border: 0; margin: 0; 
	border: solid 1px #666; vertical-align: top; text-align: center; line-height: 48px; 
	text-decoration:none; font-weight:bold; font-size: 16px; color: #666; 
}
*/
#system_footer #system_foot_nav a.foot_box, #system_footer #system_foot_nav .foot_box a.in_foot_box {
	<%= all_border_radius( '3px' ) %> background: #111; display: inline-block; padding: 2px 2px 1px; border: solid 1px #666;
}

#system_footer #system_foot_nav a.foot_box.aktiv,  #system_footer #system_foot_nav .foot_box a.in_foot_box.aktiv 
{ background: #333; color: #999; }


#system_footer #system_foot_nav .foot_box .sub_foot_box { 
		position: absolute; bottom: 42px; left: -50px; display: block; width: 150px; padding: 7px 0; 
		<%= vertical_gradient( '#111111', '#333333' ) %> 
		border: solid 1px #666; display: none;
		<%= all_border_radius( '3px' ) %>
		 }
#system_footer #system_foot_nav .foot_box:hover .sub_foot_box { display: block;}


#system_footer #system_foot_nav .foot_box .sub_foot_box a { color: #999; background: transparent; display: block; padding: 3px 20px;
	text-decoration: none; }
#system_footer #system_foot_nav .foot_box .sub_foot_box a:hover { <%= vertical_gradient( '#0099cc', '#006699' ) %> color: #fff; <%= text_shadow('1px 1px 1px #000') %> }



