table {text-align: left;}
th, td { padding: 5px 10px 5px 0;}

table.system_table { width: 100%; margin: 0; }

table.system_table tr th { background: #ccc; padding: 5px; 
		border:0; border-top: solid 1px #000; border-bottom: solid 1px #000; }

table.system_table tr th:first-child { border-left: solid 1px #000; 
	-khtml-border-radius: 	 3px 0 0 3px;		-webkit-border-radius: 	 3px 0 0 3px;
	-moz-border-radius: 	 3px 0 0 3px;		-o-border-radius: 		 3px 0 0 3px;
	-ms-border-radius: 		 3px 0 0 3px;		border-radius: 			 3px 0 0 3px; }
table.system_table tr th:last-child { border-right: solid 1px #000; 
	-khtml-border-radius: 	 0 5px 3px 0;		-webkit-border-radius: 	 0 5px 3px 0;
	-moz-border-radius: 	 0 5px 3px 0;		-o-border-radius: 		 0 5px 3px 0;
	-ms-border-radius: 		 0 5px 3px 0;		border-radius: 			 0 5px 3px 0;
	 }

table.system_table tr.even td { background: #f3f2f2; padding: 5px;}
table.system_table tr.odd td { background: #f0f3fa; padding: 5px;}
table.system_table tr.showa td { background: #fff; padding: 10px 5px; }

tr.more_set { display: none; }

