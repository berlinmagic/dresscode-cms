jQuery(function($) {
	
	var window_height = $(window).height() ;
	var window_width = $(window).width() ;

	var cms_sidebar 	= 250 ;
	var cms_admin 		= 50 ;
	var border_width	= 0 ;
	var border_height 	= 0 ;
	

	$('#login_help').live('click', function(){
		$('#login_help_links').slideToggle();
	});
	
	$('#blank_content').css({
				'width' : (window_width), 
				'height' : (window_height)
			});
	
	$('#system_content').css({
				'width' : (window_width - cms_sidebar - border_width), 
				'height' : (window_height - cms_admin - border_height)
			});
	$('#system_sidebar').css({
				'width' : (cms_sidebar), 
				'height' : (window_height - cms_admin - border_height)
			});
	$('#system_footer').css({
				'width' : (window_width - border_width), 
				'height' : (cms_admin - border_height)
			});

	$(window).resize(function() {
		var this_height = $(this).height() ;
		var this_width = $(this).width() ;
		
		$('#blank_content').css({
				'width' : (this_width), 
				'height' : (this_height)
			});
		
		$('#system_content').css({
					'width' : (this_width - cms_sidebar - border_width), 
					'height' : (this_height - cms_admin - border_height)
				});
		$('#system_sidebar').css({
					'width' : (cms_sidebar), 
					'height' : (this_height - cms_admin - border_height)
				});
		$('#system_footer').css({
					'width' : (this_width - border_width), 
					'height' : (cms_admin - border_height)
				});
	});
});