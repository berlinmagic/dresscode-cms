<%= raw( "#{ render 'pipe/scriptz/theme_dynamic/libs/rclick' }" ) %>
<%= raw( "#{ render 'pipe/scriptz/theme_dynamic/libs/click_menue' }" ) %>
<%= raw( "#{ render 'pipe/scriptz/theme_dynamic/libs/telements' }" ) %>
<%= raw( "#{ render 'pipe/scriptz/theme_dynamic/libs/rasters' }" ) %>
<%= raw( "#{ render 'pipe/scriptz/theme_dynamic/libs/sort' }" ) %>

jQuery(function($) {
	
	$( "input:submit, button" ).button();
	
	$('#user_button').live('click', function(){
		$('.sub_user_foot_box').fadeToggle();
	});
	
	$('#raster_trigger').live('click', function(event){
		event.preventDefault();
		if ( $(this).hasClass('hider') ) {
			$(this).removeClass('hider');
			$(this).addClass('shower');
			$(this).html('Raster einblenden');
			$('.element_head').fadeOut();
			$('.tl_element').css('outlineWidth', '0');
		} else {
			$(this).addClass('hider');
			$(this).removeClass('shower');
			$(this).html('Raster ausblenden');
			$('.element_head').fadeIn();
			$('.tl_element').css('outlineWidth', '1px');
		}
		
	});
	
	$('.e_sub_box').hide();
	
	$('.etrigger.off').live('click', function(){
		$('.etrigger.on').each( function(){
			$(this).removeClass('aktiv');
			$(this).addClass('off');
			$(this).removeClass('on');
			$(this).next('.e_sub_box').slideUp();
		});
		$('.in_der_mache').each(function(){
			$(this).removeClass('in_der_mache');
			$(this).removeClass('green');
		});
		$(this).toggleClass('aktiv');
		$(this).removeClass('off');
		$(this).addClass('on');
		$(this).next('.e_sub_box').slideDown();
		$( '#' + $(this).attr('data-element') ).addClass('in_der_mache');
	});
	$('.etrigger.on').live('click', function(){
		$('.in_der_mache').each(function(){
			$(this).removeClass('in_der_mache');
			$(this).removeClass('green');
		});
		$(this).toggleClass('aktiv');
		$(this).addClass('off');
		$(this).removeClass('on');
		$(this).next('.e_sub_box').slideUp();
	});
	
	
	$('.esubtrigger').live('click', function(){
		$('.in_der_mache').each(function(){
			$(this).removeClass('in_der_mache');
			$(this).removeClass('green');
		});
		$( '#' + $(this).attr('data-element') ).addClass('in_der_mache');
	});
	
	/* 
	$("a[rel='LightBox']").colorbox();
	$("a.LightBox").colorbox();
	*/

	

});