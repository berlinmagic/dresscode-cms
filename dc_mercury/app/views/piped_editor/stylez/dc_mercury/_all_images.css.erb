/*
 * dc_mercury.css
 *----------------------------------------------------------------------------*/
form fieldset.buttons .commit input {
  background-image: url('/images/dc_mercury/button.png');
}
/*
 * dialog.css
 *----------------------------------------------------------------------------*/
.dc_mercury-dialog.loading,
.dc_mercury-select.loading,
.dc_mercury-palette.loading {
  background-image: url('/images/dc_mercury/loading-light.gif');
}
.dc_mercury-panel.loading {
  background-image: url('/images/dc_mercury/loading-dark.gif');
}
.dc_mercury-panel h1 a.dc_mercury-panel-close {
  background-image: url('/images/dc_mercury/close.png');
}
.dc_mercury-snippet-panel input.filter {
  background-image: url('/images/dc_mercury/search-icon.png');
  background-position: 4px center;
}
/*
 * lightview.css
 *----------------------------------------------------------------------------*/
.dc_mercury-lightview.loading {
  background-image: url('/images/dc_mercury/loading-dark.gif');
}
.dc_mercury-lightview h1.dc_mercury-lightview-title a.dc_mercury-lightview-close {
  background-image: url('/images/dc_mercury/close.png');
}
#dc_mercury_about {
  background-image: url('/images/dc_mercury/temp-logo.png');
  background-position: 0 0;
}
/*
 * modal.css
 *----------------------------------------------------------------------------*/
.dc_mercury-modal.loading .dc_mercury-modal-content-container {
  background-image: url('/images/dc_mercury/loading-light.gif');
}
/*
 * toolbar.css
 *----------------------------------------------------------------------------*/
.dc_mercury-primary-toolbar .dc_mercury-button.pressed {
  background-image: url('/images/dc_mercury/toolbar/primary/_pressed.png');
  background-position: top center;
}
.dc_mercury-primary-toolbar .dc_mercury-toolbar-expander {
  background-image: url('/images/dc_mercury/toolbar/primary/_expander.png');
  background-position: center 90%;
}
.dc_mercury-primary-toolbar .dc_mercury-save-button em,
.dc_mercury-expander-button[data-button=save] em             { background-image: url('/images/dc_mercury/toolbar/primary/save.png') }
.dc_mercury-primary-toolbar .dc_mercury-preview-button em,
.dc_mercury-expander-button[data-button=preview] em          { background-image: url('/images/dc_mercury/toolbar/primary/preview.png') }
.dc_mercury-primary-toolbar .dc_mercury-undo-button em,
.dc_mercury-expander-button[data-button=undo] em             { background-image: url('/images/dc_mercury/toolbar/primary/undo.png') }
.dc_mercury-primary-toolbar .dc_mercury-redo-button em,
.dc_mercury-expander-button[data-button=redo] em             { background-image: url('/images/dc_mercury/toolbar/primary/redo.png') }
.dc_mercury-primary-toolbar .dc_mercury-insertLink-button em,
.dc_mercury-expander-button[data-button=insertLink] em       { background-image: url('/images/dc_mercury/toolbar/primary/insertlink.png') }
.dc_mercury-primary-toolbar .dc_mercury-insertMedia-button em,
.dc_mercury-expander-button[data-button=insertMedia] em      { background-image: url('/images/dc_mercury/toolbar/primary/insertmedia.png') }
.dc_mercury-primary-toolbar .dc_mercury-insertTable-button em,
.dc_mercury-expander-button[data-button=insertTable] em      { background-image: url('/images/dc_mercury/toolbar/primary/inserttable.png') }
.dc_mercury-primary-toolbar .dc_mercury-insertCharacter-button em,
.dc_mercury-expander-button[data-button=insertCharacter] em  { background-image: url('/images/dc_mercury/toolbar/primary/insertcharacter.png') }
.dc_mercury-primary-toolbar .dc_mercury-snippetPanel-button em,
.dc_mercury-expander-button[data-button=snippetPanel] em     { background-image: url('/images/dc_mercury/toolbar/primary/snippetpanel.png') }
.dc_mercury-primary-toolbar .dc_mercury-historyPanel-button em,
.dc_mercury-expander-button[data-button=historyPanel] em     { background-image: url('/images/dc_mercury/toolbar/primary/historypanel.png') }
.dc_mercury-primary-toolbar .dc_mercury-notesPanel-button em,
.dc_mercury-expander-button[data-button=notesPanel] em       { background-image: url('/images/dc_mercury/toolbar/primary/notespanel.png') }
.dc_mercury-editable-toolbar .dc_mercury-button {
  background-image: url('/images/dc_mercury/toolbar/editable/buttons.png');
}
.dc_mercury-editable-toolbar .dc_mercury-button em {
  background-image: url('/images/dc_mercury/toolbar/editable/buttons.png');
}

.dc_mercury-snippet-toolbar .dc_mercury-button {
  background-image: url('/images/dc_mercury/toolbar/snippetable/buttons.png');
}
.dc_mercury-snippet-toolbar .dc_mercury-button em {
  background-image: url('/images/dc_mercury/toolbar/snippetable/buttons.png');
}
