/*
 * Toolbar
 *----------------------------------------------------------------------------*/
.dc_mercury-toolbar-container {
  user-select: none;
  position: fixed;
  z-index: 10010;
  top: 0;
  left: 0;
  width: 100%;
  border-bottom: 1px solid #000;
}
.dc_mercury-toolbar {
  -webkit-user-select: none;
  -moz-user-select: none;
  user-select: none;
<%#= vertical_gradient( '#e2e2e2', '#c6c6c6' ) %>
<%= vertical_gradient( '#333333', '#111111' ) %>
  border-bottom: 1px solid #000;
  cursor: default;
}
.dc_mercury-toolbar-button-container {
  float: left;
}
.dc_mercury-toolbar-expander {
  position: absolute;
  display: none;
  right: 0;
  border-left: 1px solid #727272;
}
.dc_mercury-button,
.dc_mercury-button-group,
.dc_mercury-separator,
.dc_mercury-line-separator {
  display: block;
  float: left;
}
.dc_mercury-separator,
.dc_mercury-line-separator {
  width: 1px;
  border: 0;
  margin: 0;
}
.dc_mercury-line-separator {
  width: 1px;
  background: #727272;
}
.dc_mercury-button em {
  display: block;
  font-style: normal;
}
.dc_mercury-expander {
  padding: 5px 0;
  border-radius: 4px;
  -moz-border-radius: 4px;
}
.dc_mercury-expander .dc_mercury-expander-button {
  cursor: default;
  white-space: nowrap;
  padding: 0 20px 0 10px;
}
.dc_mercury-expander .dc_mercury-expander-button:hover {
  background: #CCC;
}
.dc_mercury-expander .dc_mercury-expander-button em {
  display: inline-block;
  float: left;
  width: 20px;
  height: 20px;
  margin-right: 10px;
  -webkit-background-size: 100% 100%;
  -moz-background-size: 100% 100%;
  background-size: 100% 100%;
}
.dc_mercury-expander .dc_mercury-expander-button span {
  display: inline-block;
  line-height: 20px;
}
.disabled .dc_mercury-button,
.dc_mercury-button.disabled {
  opacity: 0.33;
}
/*
 * Toolbar: Primary Toolbar
 *----------------------------------------------------------------------------*/
.dc_mercury-primary-toolbar {
  position: relative;
  height: 58px;
  overflow: hidden;
  text-shadow: #EEE 0 1px 0;
}
.dc_mercury-primary-toolbar .dc_mercury-button {
  display: inline-block;
  height: 58px;
  margin-bottom: 20px;
  min-width: 55px;
  text-align: center;
  white-space: nowrap;
  text-decoration: none;
  font-family: Helvetica, Tahoma, Arial, sans-serif;
}
.dc_mercury-primary-toolbar .dc_mercury-button.pressed {
  background-repeat: no-repeat;
}
.dc_mercury-primary-toolbar .dc_mercury-button em {
  margin: 0 -5px;
  height: 15px;
  padding-top: 41px;
  background-repeat: no-repeat;
  background-position: 50% 7px;
  font-size: 8.5pt;
  line-height: 15px;
  color: #f3f2f2;
<%= text_shadow( '1px 1px 1px #666' ) %>
}
.dc_mercury-primary-toolbar .dc_mercury-button.active em {
  background-position: 51% 8px;
}

.dc_mercury-primary-toolbar .dc_mercury-separator,
.dc_mercury-primary-toolbar .dc_mercury-line-separator {
  display: inline-block;
  width: 1px;
  height: 50px;
  margin: 5px 20px 28px;
}
.dc_mercury-primary-toolbar .dc_mercury-toolbar-button-container {
  white-space: nowrap;
  padding-right: 10px;
}
.dc_mercury-primary-toolbar .dc_mercury-toolbar-expander {
  width: 12px;
  height: 58px;
  background-color: rgba(0, 0, 0, .2);
  background-repeat: no-repeat;
}
/*
 * Toolbar: Editable Region Toolbar
 *----------------------------------------------------------------------------*/
.dc_mercury-editable-toolbar {
  padding: 3px 13px 1px 10px;
  border-top: 1px solid #555;
  background-image: -webkit-gradient(linear, left bottom, left top, color-stop(0, rgb(198,198,198)), color-stop(1, rgb(210,210,209)));
  background-image: -moz-linear-gradient(center bottom, rgb(198,198,198) 0%, rgb(210,210,209) 100%);
<%= vertical_gradient( '#333333', '#555555' ) %>
}
.dc_mercury-editable-toolbar:after {
  content: '\00a0';
  display: block;
  visibility: hidden;
  clear: both;
  height: 0;
}
.dc_mercury-editable-toolbar .dc_mercury-separator,
.dc_mercury-editable-toolbar .dc_mercury-line-separator {
  height: 18px;
  padding: 0;
  margin: 0 7px 2px;
}
.dc_mercury-editable-toolbar .dc_mercury-separator {
  margin: 0 3px 2px;
}
.dc_mercury-editable-toolbar .dc_mercury-button-group {
  white-space: nowrap;
}
.dc_mercury-editable-toolbar .dc_mercury-button-group .dc_mercury-button:first-child {
  width: 23px;
}
.dc_mercury-editable-toolbar .dc_mercury-button {
  width: 22px;
  height: 18px;
  margin: 0 0 2px;
}
.dc_mercury-editable-toolbar .dc_mercury-button em {
  display: none;
}
.dc_mercury-editable-toolbar .dc_mercury-button-palette {
  width: 23px;
  background-position: 0 -36px;
}
.dc_mercury-editable-toolbar .dc_mercury-button-select {
  width: auto !important;
  overflow: hidden;
  padding-left: 6px;
  background-position: -24px -36px;
}
.dc_mercury-editable-toolbar .dc_mercury-button-select em {
  display: block;
  padding-right: 15px;
  background-position: right -36px;
  cursor: pointer;
  white-space: nowrap;
  font-style: normal;
  font-family: Helvetica, Tahoma, Arial, sans-serif;
  font-size: 8.5pt;
  line-height: 19px;
  color: #222;
}
